                    android:layout_height="wrap_content"
                    android:layout_below="@+id/av_judul"
                    android:layout_marginLeft="150dp"
                    android:rating="4.9" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/av_rating"
                    android:text="@string/des_action2"/>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/White">

                <TextView
                    android:id="@+id/dun_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:layout_marginTop="30dp"
                    android:text="@string/dunkrik"
                    android:textColor="@color/Black"
                    android:textSize="30sp" />
                <RatingBar
                    android:layout_below="@id/dun_judul"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:rating="4.5" />

                <ImageView
                    android:id="@+id/dunkrik"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
